@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="container my-5">
        <!-- Beautiful Quote -->
        <div class="text-center">
            <blockquote class="blockquote">
                <p class="mb-0" style="font-size: 2rem;">"A journey of a thousand miles begins with a single step."</p>
                <footer class="blockquote-footer">Lao Tzu</footer>
            </blockquote>
        </div>
    </section>

    <!-- Three Attractive Links/Buttons -->
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <h2 class="card-title">Make a Reservation</h2>
                        <p class="card-text">Book your stay now and experience luxury at its best.</p>
                    </div>
                    <div class="card-footer bg-white border-0 text-center">
                        <a href="/HotelReservation/BookingList/" class="btn btn-primary">Reserve Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <h2 class="card-title">View Users</h2>
                        <p class="card-text">Explore our registered users and their profiles.</p>
                    </div>
                    <div class="card-footer bg-white border-0 text-center">
                        <a href="/HotelUser/UserList/" class="btn btn-primary">View Users</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <h2 class="card-title">Browse Rooms</h2>
                        <p class="card-text">Discover our luxurious rooms and suites.</p>
                    </div>
                    <div class="card-footer bg-white border-0 text-center">
                        <a href="/HotelRoom/List/" class="btn btn-primary">Browse Rooms</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
