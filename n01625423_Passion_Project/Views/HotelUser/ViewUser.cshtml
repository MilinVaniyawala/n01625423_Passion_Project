@model n01625423_Passion_Project.Models.UserDto

@{
    ViewBag.Title = "View User";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h2 class="text-muted">User Details</h2>
        </div>
        <div class="col-auto">
            <a href="/HotelUser/UserList" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back To Users</a>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>User ID: </strong> @Model.UserID</li>
                <li class="list-group-item"><strong>Username: </strong> @Model.Username</li>
                <li class="list-group-item"><strong>Email: </strong> @Model.Email</li>
                <li class="list-group-item"><strong>Password: </strong> @Model.Password</li>
            </ul>
        </div>
    </div>
</div>
