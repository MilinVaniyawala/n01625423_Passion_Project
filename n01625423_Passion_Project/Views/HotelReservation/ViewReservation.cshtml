@model  n01625423_Passion_Project.Models.ReservationDto

@{
    ViewBag.Title = "ViewReservation";
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h2 class="text-muted">Reservation Details</h2>
        </div>
        <div class="col-auto">
            <a href="/hotelReservation/bookingList" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back To Reservations</a>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title text-muted">Room Reserved by @Model.Username</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>RoomNumber: </strong> @Model.RoomNumber</li>
                <li class="list-group-item"><strong>CheckInDate: </strong> @Model.CheckInDate.ToString("MMMM dd, yyyy") @Model.CheckInDate.ToString("HH:mm:ss")</li>
                <li class="list-group-item"><strong>CheckOutDate: </strong> @Model.CheckOutDate.ToString("MMMM dd, yyyy") @Model.CheckOutDate.ToString("HH:mm:ss")</li>
                <li class="list-group-item"><strong>Status: </strong>@Model.Status</li>
            </ul>
        </div>
    </div>
</div>
